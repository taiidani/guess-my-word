{{ template "header.gohtml" . }}

<section id="app">
    {{ if and .Session .Session.Current.Stale }}
        <div class="snackbar fill active top">
            <form method="POST" action="/reset">
                <nav>
                    <span class="max">âœ¨ A new word is available!</span>
                    <button type="submit"><i>play_arrow</i> Start guessing</button>
                </nav>
            </form>
        </div>
    {{ end }}

    <article class="{{ if eq .Mode "hard" }}tertiary-container{{end}}">
        <p>
            {{ if eq .Mode "hard" }}
            This is a <strong>challenging</strong> mode.
            It uses the entire Scrabble dictionary as its word list, including plurals and different tenses.
            It is not recommended for new players!
            {{ else }}
            This application hosts a daily word game.
            Guessing using the form below will place your guess above or below the box based on its place in the alphabet relative to today's word.
            Every day a new word will become guessable. Good luck!
            {{ end }}
        </p>
    </article>

    <article id="guesser" class="blur">
        {{ template "guesser.gohtml" .Guesser }}
    </article>
</section>

{{ template "footer.gohtml" . }}
